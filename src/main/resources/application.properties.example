#debug=true

spring.application.name=RainBlog

# datasource config
spring.datasource.url=jdbc:mysql://localhost:3306/your_database_name?useUnicode=true&characterEncoding=utf8&serverTimezone=UTC
spring.datasource.username=your_username
spring.datasource.password=your_password
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# JPA config
spring.jpa.show-sql=true
spring.jpa.hibernate.ddl-auto=update
spring.jpa.properties.hibernate.dialect=mysql
spring.jpa.properties.hibernate.use_sql_comments=true

# Spring session config
spring.session.jdbc.initialize-schema=always

# JWT config
jwt.secret-key=your-secret-key-in-base64-encoding
jwt.expiration-time=expiration-time-in-ms
